<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Chat System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        h1 {
            text-align: center;
        }

        #chat-container {
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .message {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
        }

        .message.sender {
            background-color: #DCF8C6;
            align-self: flex-start;
        }

        .message.receiver {
            background-color: #E8E8E8;
            align-self: flex-end;
        }

        .message.sender .time {
            text-align: right;
        }

        .message.receiver .time {
            text-align: left;
        }

        .input-container {
            display: flex;
            margin-top: 20px;
        }

        .input-container input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .input-container button {
            padding: 10px 20px;
            margin-left: 10px;
            border: none;
            border-radius: 5px;
            background-color: #007BFF;
            color: #fff;
            cursor: pointer;
        }

        /* Media queries for responsiveness */
        @media only screen and (max-width: 600px) {
            #chat-container {
                max-width: 100%;
                margin: 10px;
            }
            .message {
                margin-left: 10px;
                margin-right: 10px;
            }
            .input-container {
                flex-direction: column;
            }
            .input-container input,
            .input-container button {
                margin-top: 10px;
            }
        }
    </style>
</head>

<body>

    <div id="chat-container">
        <h1>AI Chat System</h1>
        <div id="chat-container1">
        </div>

        <div class="input-container">
            <input type="text" placeholder="Type your message...">
            <button id="send">Send</button>
        </div>
    </div>
</body>

</html>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#send").on('click', function (e) {
            const getValue = $('input').val();

            if (getValue) {
                $('#chat-container1').append(
                `   <div class="message sender" id="sender">
                            <div class="time">${getValue}</div>
                            <div class="time">${(new Date()).toLocaleString('en-US', { hour: 'numeric', hour12: true })}</div>
                        </div>
                    `
            );
            $('input').val('');
            $.ajax({
                type: "post",
                url: "/ask",
                data: { msg: getValue },
                success: function (response) {
                    console.log(response);
                    // dataArray.push(response)

                    $('#chat-container1').append(
                        `   <div class=message receiver">
                                    <div class="time">${response}</div>
                                    <div class="time">${(new Date()).toLocaleString('en-US', { hour: 'numeric', hour12: true })}</div>
                                </div>
                            `
                    );

                }

            });
            }
          
        });
    });
</script>